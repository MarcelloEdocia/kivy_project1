Screen:
	name: "drink"
	MDFloatLayout:
		md_bg_color: 1,1,1,1
		MDToolbar:
			title: ""
			md_bg_color: rgba(202, 0, 13, 255)
			left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]] #open == toggle
			right_action_items: [["keyboard-return", lambda x: app.return_to_menu()]]
			top: root.top

		MDFloatLayout:
			size_hint: 1, .34
			top: root.top
			pos_hint: {"center_y":.75}
			md_bg_color: 1,1,1,1

		Image:
			source: "assets/img/rounded_drink.png"
			size_hint_y: .13
			pos_hint: {"center_x":.5, "center_y":.81}

		MDLabel:
			text: "Beverages"
			font_name: "Roboto"
			font_size: "23sp"
			halign: "center"
			pos_hint: {"center_x":.477, "center_y":.72}
			bold: True


		MDCard:
			size_hint: .9, .14
			pos_hint: {"center_x":.5, "center_y":.50}
			elevation: 15


			MDBoxLayout:
				id: box_top
				spacing: "20dp"

				FitImage:
					source: "assets/img/soda.jpg"
					size_hint: .4, None
					height: text_box.height
				MDBoxLayout:
					id: text_box
					orientation: "vertical"
					spacing: "10dp"
					padding: 0, "10dp", "10dp", "10dp"

					MDLabel:
						text: "Soda"
						font_style: "H5"
						bold: True
					MDRectangleFlatIconButton:
					    icon: "cart-arrow-down"
					    text: "Add to your cart"
					    theme_text_color: "Custom"
					    line_color: 1,1,1,1
				        icon_color: rgba(202, 0, 13, 255)
				        text_color: rgba(202, 0, 13, 255)

		MDCard:
			size_hint: .9, .14
			pos_hint: {"center_x":.5, "center_y":.34}
			elevation: 15


			MDBoxLayout:
				id: box_top
				spacing: "20dp"

				FitImage:
					source: "assets/img/tea.jpg"
					size_hint: .4, None
					height: text_box.height
				MDBoxLayout:
					id: text_box
					orientation: "vertical"
					spacing: "10dp"
					padding: 0, "10dp", "10dp", "10dp"

					MDLabel:
						text: "Tea"
						font_style: "H5"
						bold: True
					MDRectangleFlatIconButton:
					    icon: "cart-arrow-down"
					    text: "Add to your cart"
					    theme_text_color: "Custom"
					    line_color: 1,1,1,1
				        icon_color: rgba(202, 0, 13, 255)
				        text_color: rgba(202, 0, 13, 255)

		MDCard:
			size_hint: .9, .14
			pos_hint: {"center_x":.5, "center_y":.14}
			elevation: 15

			MDBoxLayout:
				id: box_top
				spacing: "20dp"

				FitImage:
					source: "assets/img/coffee.jpeg"
					size_hint: .4, None
					height: text_box.height
				MDBoxLayout:
					id: text_box
					orientation: "vertical"
					spacing: "10dp"
					padding: 0, "10dp", "10dp", "10dp"

					MDLabel:
						text: "Coffee"
						font_style: "H5"
						bold: True
					MDRectangleFlatIconButton:
					    icon: "cart-arrow-down"
					    text: "Add to your cart"
					    theme_text_color: "Custom"
					    line_color: 1,1,1,1
				        icon_color: rgba(202, 0, 13, 255)
				        text_color: rgba(202, 0, 13, 255)



	MDNavigationDrawer:
		id: nav_drawer

		MDFloatLayout:
			Image:
				source: "assets/img/logo.png"
				size_hint: .2 , .2
				pos_hint: {"center_x":.2, "center_y":.93}

			MDRectangleFlatIconButton:
				icon: "logout-variant"
				text: "Log out"
				theme_text_color: "Custom"
				line_color: 1,1,1,1
				icon_color: rgba(202, 0, 13, 255)
				text_color: rgba(202, 0, 13, 255)
				pos_hint: {"center_x":.25, "center_y":.8}
				on_release: app.sign_out()

			MDRectangleFlatIconButton:
				icon: "cart-plus"
				text: "Purchase cart"
				theme_text_color: "Custom"
				line_color: 1,1,1,1
				icon_color: rgba(202, 0, 13, 255)
				text_color: rgba(202, 0, 13, 255)
				pos_hint: {"center_x":.30, "center_y":.73}

			MDRectangleFlatIconButton:
			    icon: "cog-sync-outline"
			    text: "Settings"
			    theme_text_color: "Custom"
			    line_color: 1,1,1,1
			    icon_color: rgba(202, 0, 13, 255)
			    text_color: rgba(202, 0, 13, 255)
			    pos_hint: {"center_x": 25, "center_y": .67}







